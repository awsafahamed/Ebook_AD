@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EBOOK_AD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EBOOK_AD.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQv2EZ42mMlRUpukrIwUOeHdz4+dcoWTIb91Qhygj+V7Y8QKNhNrgBt" crossorigin="anonymous">

    <style>
        body {
            display: flex;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #ffb328;
            color: white;
            display: flex;
            flex-direction: column;
            padding: 20px;
            box-shadow: 2px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar .logo {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 30px;
        }

        .sidebar .logo img {
            width: 160px;
            height: auto;
            border-radius: 50%;
            margin-bottom: 10px;
        }

        .sidebar .logo h3 {
            margin: 0;
            font-size: 22px;
            font-weight: bold;
            color: white;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
            display: block;
            transition: background-color 0.3s ease;
        }

        .sidebar a.active {
            background-color: #e09d00;
            font-weight: bold;
        }

        .sidebar a:hover {
            background-color: #e09d00;
            text-decoration: none;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
        }

        .content h1 {
            margin-top: 0;
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="logo">
            <img src="~/images/logo.png" alt="Logo">
 
        </div>
        <a href="@Url.Action("Index", "Admin")" class="nav-item">Overview</a>
        <a href="@Url.Action("Index", "Book")" class="nav-item">Manage Books</a>
        <a href="@Url.Action("Index", "User")" class="nav-item">Manage Users</a>
        <a href="@Url.Action("Index", "Order")" class="nav-item">Manage Orders</a>
        <a href="@Url.Action("GenerateReport", "Admin")" class="nav-item">Generate Report</a>

        <a href="@Url.Action("Index", "Feedback")" class="nav-item">View Feedback</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h1>@ViewData["Title"]</h1>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.12.2/lottie.min.js"></script>
    <script src="https://kit.fontawesome.com/1619a626e1.js?ver=4.5.7" crossorigin="anonymous"></script>

    <script>
        // Script to toggle sidebar for mobile view
        const sidebar = document.getElementById('sidebar');
        const toggleButton = document.createElement('span');
        toggleButton.classList.add('sidebar-toggle');
        toggleButton.innerHTML = '&#9776;';
        document.body.appendChild(toggleButton);

        toggleButton.addEventListener('click', function () {
            sidebar.classList.toggle('open');
        });

        // Highlight active link
        const currentPage = window.location.pathname.split('/')[2];
        const links = document.querySelectorAll('.sidebar a');
        links.forEach(link => {
            const href = link.getAttribute('href');
            if (href.includes(currentPage)) {
                link.classList.add('active');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
