@{
    Layout = null;
  
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EBOOK_AD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EBOOK_AD.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQv2EZ42mMlRUpukrIwUOeHdz4+dcoWTIb91Qhygj+V7Y8QKNhNrgBt" crossorigin="anonymous">

    <!-- ======= Header ======= -->
   
    <style>
        body {
            display: flex;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 250px;
            background-color: #ffb328;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px 15px;
        }

            .sidebar .logo {
                display: flex;
                flex-direction: column;
                align-items: center;
                margin-bottom: 20px;
            }

                .sidebar .logo img {
                    width: 160px;
                    height: auto;
                    border-radius: 50%;
                    margin-bottom: 10px;
                }

                .sidebar .logo h3 {
                    margin: 0;
                    font-size: 18px;
                    font-weight: bold;
                }

            .sidebar a {
                color: white;
                text-decoration: none;
                margin: 10px 0;
                width: 100%;
                
                padding: 10px;
                border-radius: 5px;
                font-size: 16px;

            }

                .sidebar a.active {
                    background-color: #e09d00;
                    font-weight: bold;
                }

                .sidebar a:hover {
                    background-color: #e09d00;
                    text-decoration: none;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
            background-color: #f8f9fa;
        }

            .content h1 {
                margin-top: 0;
            }
    </style>
</head>

<body>



    <!-- Fixed Sidebar -->
    <div class="sidebar">
        <div class="logo">
            <img src="~/images/logo.png" alt="Logo">

        </div>
        <a href="@Url.Action("Index", "Admin")" class="nav-item ">Overview</a>
        <a href="@Url.Action("Index", "Book")" class="nav-item">Manage Books</a>
        <a href="@Url.Action("Index", "User")" class="nav-item">Manage Users</a>
        <a href="@Url.Action("Index", "Order")" class="nav-item">Manage Orders</a>
        <a href="@Url.Action("Index", "Feedback")" class="nav-item">View Feedback</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h1>@ViewData["Title"]</h1>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.12.2/lottie.min.js"></script>
    <script src="https://kit.fontawesome.com/1619a626e1.js?ver=4.5.7" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-93sdlwiAO+QPYGsNNx1NNB64MntTuKLAnZ2T7ZtSO6z6RMyjlpUJk6Vw5kUQfSCM" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
