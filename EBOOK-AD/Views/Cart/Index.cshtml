@model IEnumerable<EBOOK_AD.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container mt-4">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Book Title</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cart in Model)
            {
                <tr>
                    <td>@cart.BookId</td> <!-- Replace with Book Title via ViewModel -->
                    <td>@cart.Quantity</td>
                    <td>@string.Format("{0:C}", 20) <!-- Replace with Book Price --> </td>
                    <td>@string.Format("{0:C}", cart.Quantity * 20)</td>
                    <td>
                        <a href="@Url.Action("Remove", "Cart", new { id = cart.CartId })" class="btn btn-sm btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-end">
        <a href="/Order/Checkout" class="btn btn-primary">Proceed to Checkout</a>
    </div>
</div>
