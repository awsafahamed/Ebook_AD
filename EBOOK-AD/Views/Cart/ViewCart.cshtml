@model List<EBOOK_AD.Models.Cart>

<h2>Your Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>@item.Book.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Quantity * item.Book.Price).ToString("C")</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-cartId="@item.CartId" class="btn btn-danger">
                            Remove
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.Sum(i => i.Quantity * i.Book.Price).ToString("C")</h3>

    <a asp-action="Checkout" class="btn btn-primary">Proceed to Checkout</a>
}
